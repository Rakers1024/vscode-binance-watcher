{
  "name": "vscode-binance-watcher",
  "displayName": "Binance Watcher",
  "description": "在vscode上实时查看币安交易对、加密货币交易对",
  "version": "1.0.0",
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "pub": "vsce publish",
    "release": "npx bumpp --tag --commit"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-binance-watcher.refresh",
        "title": "Binance Watcher: 刷新数据"
      },
      {
        "command": "vscode-binance-watcher.toggleVisibility",
        "title": "Binance Watcher: 切换显示/隐藏"
      }
    ],
    "configuration": {
      "title": "Binance Watcher",
      "properties": {
        "binanceWatcher.symbolsConfigs": {
          "type": "array",
          "default": [
            {
              "symbol": "BTCUSDT",
              "alias": "BTC"
            },
            {
              "symbol": "ETHUSDT",
              "alias": "ETH"
            }
          ],
          "description": "要监控的交易对列表及其别名",
          "items": {
            "type": "object",
            "required": ["symbol"],
            "properties": {
              "symbol": {
                "type": "string",
                "description": "交易对名称，例如 BTCUSDT"
              },
              "alias": {
                "type": "string",
                "description": "显示的别名，例如 BTC"
              }
            }
          }
        },
        "binanceWatcher.updateInterval": {
          "type": "number",
          "default": 2000,
          "description": "数据更新间隔（毫秒）"
        },
        "binanceWatcher.visible": {
          "type": "boolean",
          "default": true,
          "description": "是否显示在状态栏"
        },
        "binanceWatcher.showArrow": {
          "type": "boolean",
          "default": true,
          "description": "是否显示涨跌箭头"
        },
        "binanceWatcher.showPercentage": {
          "type": "boolean",
          "default": true,
          "description": "是否显示涨跌百分比"
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}
